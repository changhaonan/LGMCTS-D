    "version": "0.2.0",
    "configurations": [
        {
            "name": "Gen [lgmcts]",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/lgmcts/scripts/data_generation/gen_lgmcts.py",
            "args": [
                "--num_episodes=100",
                "--debug",
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Gen [strdiff]",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/lgmcts/scripts/data_generation/gen_strdiff.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Test env",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/lgmcts/run.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Eval online",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/lgmcts/scripts/eval/eval_lgmcts.py",
            "args": [
                "--method=mcts",
                "--n_epoches=-1",
                "--mask_mode=raw_mask",
                // "--debug",
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Eval online (Debug)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/lgmcts/scripts/eval/eval_lgmcts.py",
            "args": [
                "--dataset_path=${workspaceFolder}/output/debug",
                "--method=mcts",
                "--mask_mode=raw_mask",
                "--debug",
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}